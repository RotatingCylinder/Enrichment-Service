# LLM Alert Enrichment Configuration

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
LLM_MODEL=llama3:8b

# Wazuh Indexer Configuration
WAZUH_INDEXER_URL=https://localhost:9200
WAZUH_INDEXER_USER=admin
WAZUH_INDEXER_PASS=changeme

# Alert Filtering
FILTER_MIN_SEVERITY=high
FILTER_ALLOWED_SEVERITIES=high,critical
;FILTER_MIN_RISK_SCORE=70.0

# Service Configuration
DATA_SOURCE=indexer
WAZUH_POLL_INTERVAL=30
WAZUH_LOOKBACK_MINUTES=120
WAZUH_STORE_ENRICHED=true

# Wazuh Indexer advanced configuration
WAZUH_INDEX_PATTERN=wazuh-alerts-4.x-*
WAZUH_ENRICHED_INDEX=wazuh-enriched-alerts
TIMESTAMP_FIELD=timestamp

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/enrichment.log
